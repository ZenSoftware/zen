{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2020", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zen/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@zen/auth": ["libs/auth/src/index.ts"],
      "@zen/common": ["libs/common/src/index.ts"],
      "@zen/components": ["libs/components/src/index.ts"],
      "@zen/graphql": ["libs/graphql/src/index.ts"],
      "@zen/graphql/client": ["libs/graphql/src/lib/client/index.ts"],
      "@zen/graphql/fields": ["libs/graphql/src/lib/fields/index.ts"],
      "@zen/grid": ["libs/grid/src/index.ts"],
      "@zen/layout": ["libs/layout/src/index.ts"],
      "@zen/main": ["libs/main/src/index.ts"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
