{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@zen/auth": ["libs/auth/src/index.ts"],
      "@zen/common": ["libs/common/src/index.ts"],
      "@zen/components": ["libs/components/src/index.ts"],
      "@zen/graphql": ["libs/graphql/src/index.ts"],
      "@zen/graphql/client": ["libs/graphql/src/lib/client/index.ts"],
      "@zen/graphql/fields": ["libs/graphql/src/lib/fields/index.ts"],
      "@zen/layout": ["libs/layout/src/index.ts"],
      "@zen/main": ["libs/main/src/index.ts"],
      "@zen/nest-auth": ["libs/nest-auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
